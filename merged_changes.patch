+    CREATE TABLE dbo.Notifications (
+        notification_id INT IDENTITY(1,1) PRIMARY KEY,
+        notification_type NVARCHAR(100) NOT NULL, -- 'ticket','vehicle_request', etc.
+        reference_id INT NULL,                     -- e.g., ticket_id or trip_id
