+GO
+
+-- 3) Create Vehicle_Trip_Receipts table (store gas receipts or attachments)
+IF NOT EXISTS (SELECT * FROM sys.objects WHERE object_id = OBJECT_ID(N'dbo.Vehicle_Trip_Receipts') AND type in (N'U'))
