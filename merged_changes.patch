+        vehicle_id INT NOT NULL,
+        requester_first NVARCHAR(100) NOT NULL,
+        requester_last NVARCHAR(100) NOT NULL,
+        requester_email NVARCHAR(200) NOT NULL,
+        requester_phone NVARCHAR(50) NULL,
